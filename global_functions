# -*- mode: sh -*-

# only provide debugging info if we're not in production mode
debug() {
	if [ -z "$_IN_PRODUCTION" ];
	then
		echo "DEBUG: $@" >&2
	fi
}

echoerr () {
	echo "Error: $@" >&2
}

error() {
	echoerr "$@"
	exit 1
}

csv() {
	while [ -n "$1" ];
	do
		echo -n "$1"
		if [ -n "$2" ];
		then
			echo -n ","
		fi
		shift
	done
	echo
}

isset() {
	if [ -z "$1" ];
	then
		echoerr "$2"
		return 1
	else
		return 0
	fi
}
